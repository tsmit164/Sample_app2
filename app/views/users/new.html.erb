<html lang="en">
  <head>
    <meta charset="utf-8">
    <link rel="icon"
          type="image/png"
          href="./resources/favicon.jpg">
    <title>Lego Town</title>

    <link href="styles/my-style.css" rel="stylesheet"/>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="js/my-js.js"></script>

  </head>
  <body>

    <div id="nav-bar-holder">
      <span class="nav-item">
        <a href="#linktotown" rel="" id="anchor1" class="no-color">Our Town</a>
      </span>
      <span class="nav-item">
        <a href="/static_pages/jobs" class="no-color">Jobs</a>
      </span>
      <span class="nav-item">
        <a href="/static_pages/living" class="no-color">Living</a>
      </span>
      <span class="nav-item">
        <a href="/static_pages/fun" class="no-color">Fun</a>
      </span>
    </div>


    <div id="product-design-header">
      <div class="big">Interested?</div>
    </div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :school %>
      <%= f.text_field :school %>

      <%= f.submit "I'd like to know more", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div id="footer">

  <div id="footer-text">
    <span>Welcome to the footer!  Don't step on a Lego!</span>
    <!-- <a href="./index.html" class="no&#45;color">sometimes... I can feel you in motion</a> -->
  </div>
</div>


<script>
$('a').click(function(){
    $('html, body').animate({
        scrollTop: $( $(this).attr('href') ).offset().top
    }, 500);
    return false;
});
</script>


</div>

</body>
</html>
